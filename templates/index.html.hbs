<!DOCTYPE html>
<html>
{{> head }}

<body>
    {{> header }}

    <div class="container-fluid">
        <div class="row">
            <div class="table-responsive">
                {{!-- <h1>All Files</h1> --}}
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Path</th>
                            <th>Size</th>
                            <th>Created At</th>
                            <th>Media Type</th>
                            <th>MD5</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <th><a href="dl/{{ id }}">{{ id }}</a></th>
                            <td><a href="dl/{{ path }}">{{ path }}</a></td>
                            <td>{{ size }}</td>
                            <td>{{ created_at }}</td>
                            <td>{{ mime }}</td>
                            <td><a href="dl/{{ hash }}">{{ hash }}</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>